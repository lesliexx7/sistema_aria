# Base de Datos PostgreSQL
DB_HOST=tu-host-postgresql.com
DB_USER=postgres
DB_PASSWORD=tu-password-seguro
DB_NAME=aria_db
DB_PORT=5432

# Puerto del Servidor
PORT=3002

# Configuración de Correo (Gmail)
# Para usar Gmail:
# 1. Activa la verificación en 2 pasos en tu cuenta de Google
# 2. Genera una "Contraseña de aplicación" en: https://myaccount.google.com/apppasswords
# 3. Usa esa contraseña aquí (no tu contraseña normal)
GMAIL_USER=tu-correo@gmail.com
GMAIL_APP_PASSWORD=tu-contraseña-de-aplicacion-16-caracteres

# Destinatarios por defecto (separados por coma)
EMAIL_DESTINATARIOS_DEFAULT=destinatario1@empresa.com,destinatario2@empresa.com

# API de Google Maps (opcional)
GOOGLE_MAPS_API_KEY=tu-api-key-de-google-maps

# Alternativa: SMTP genérico (si no usas Gmail)
# SMTP_HOST=smtp.ejemplo.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=usuario@ejemplo.com
# SMTP_PASSWORD=contraseña
